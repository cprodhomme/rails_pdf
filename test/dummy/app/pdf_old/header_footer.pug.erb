template#page-header
  style(type='text/css').
    .pdf-header {
      margin-left: 0.15in;
      margin-right: 0.15in;
      font-family: 'Londrina Solid';
      font-size: 4px;
      color: #777;
      display: flex;
      flex-direction: row;
      flex-wrap: nowrap;
      justify-content: space-between;
      align-items: flex-start;
      width: 100%;
    }
  .pdf-header
    div.id Report #<%= rand(100_000) %>
    div.date <%= I18n.l Date.current, format: :long %>


template#page-footer
  style(type='text/css').
    .pdf-footer {
      font-family: Georgia;
      font-size: 6px;
      text-align: right;
      color: black;
      width: 100%;
      padding-right: 0.15in;
    }  
  .pdf-footer #[span.pageNumber]

